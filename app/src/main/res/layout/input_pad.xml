<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit7"
            style="@style/button_normal_style"
            android:text="7" />

        <Button
            android:id="@+id/digit8"
            style="@style/button_normal_style"
            android:text="8" />

        <Button
            android:id="@+id/digit9"
            style="@style/button_normal_style"
            android:text="9" />

        <Button
            android:id="@+id/plus"
            style="@style/button_normal_style"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit4"
            style="@style/button_normal_style"
            android:text="4" />

        <Button
            android:id="@+id/digit5"
            style="@style/button_normal_style"
            android:text="5" />

        <Button
            android:id="@+id/digit6"
            style="@style/button_normal_style"
            android:text="6" />

        <Button
            android:id="@+id/equal"
            style="@style/button_normal_style"
            android:text="=" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit1"
            style="@style/button_normal_style"
            android:text="1" />

        <Button
            android:id="@+id/digit2"
            style="@style/button_normal_style"
            android:text="2" />

        <Button
            android:id="@+id/digit3"
            style="@style/button_normal_style"
            android:text="3" />

        <Button
            android:id="@+id/qq_wallet"
            style="@style/button_normal_style"
            android:background="@drawable/alipay_normal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/point"
            style="@style/button_normal_style"
            android:text="." />

        <Button
            android:id="@+id/digit0"
            style="@style/button_normal_style"
            android:text="0" />

        <ImageButton
            android:id="@+id/back"
            style="@style/button_normal_style"
            android:src="@drawable/delete"
            android:text="B" />

        <Button
            android:id="@+id/weichat_wallet"
            style="@style/button_normal_style"
            android:background="@drawable/weipay_large_normal" />
    </LinearLayout>
</LinearLayout>