<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/appbar" />
    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/ps_image_margin_top"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/ps_image_size"
        android:layout_height="@dimen/ps_image_size" />

    <TextView
        android:id="@+id/text1"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ps_item_margin_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ps_text_2"
        android:text="@string/ps_already_paid"/>

    <TextView
        android:id="@+id/money"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ps_item_margin_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ps_text_1"/>

    <TextView
        android:id="@+id/lookup"
        android:layout_below="@id/money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ps_item_margin_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ps_text_3"
        android:textColor="@android:color/holo_blue_bright"
        android:text="@string/ps_lookup_order"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_below="@id/lookup"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_btn_height"
        android:layout_marginTop="@dimen/ps_item_margin_vertical_1"
        android:layout_marginRight="@dimen/ps_margin_horizontal"
        android:layout_marginLeft="@dimen/ps_margin_horizontal"
        android:textSize="@dimen/ps_text_2"
        android:textColor="@color/colorWhite"
        android:text="@string/ps_btn_continue"
        android:background="@drawable/button_green" />

    <TextView
        android:id="@+id/date"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ps_cash_item_margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ps_text_3"
        android:textColor="@android:color/darker_gray"
        android:text="@string/ps_cash_time"/>

</RelativeLayout>