<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/list_item_sel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sa_list_height">
    <TextView
        android:id="@+id/date"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/sa_text_1"
        android:paddingLeft="@dimen/sa_padding_horizontal"
        android:gravity="center_vertical|left"/>
    <TextView
        android:id="@+id/info"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/sa_text_1"
        android:paddingRight="@dimen/sa_padding_horizontal"
        android:gravity="center_vertical|right"/>
</LinearLayout>