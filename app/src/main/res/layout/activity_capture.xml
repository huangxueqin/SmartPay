<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">
    <com.android.smartpay.scanner.Preview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include layout="@layout/viewfinderview"
            android:id="@+id/view_finder_view"/>
    </com.android.smartpay.scanner.Preview>
    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <Button
        android:id="@+id/switch_paymode"
        android:text="@string/ca_bt_wechat"
        android:textColor="@color/colorWhiteHalfTransparent"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/capture_button"
        android:layout_marginBottom="70dp"
        />
</FrameLayout>